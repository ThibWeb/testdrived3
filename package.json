{
  "name": "testdrived3",
  "version": "0.3.1",
  "description": "An intro to D3 via a set of self-guided workshops",
  "author": "Thibaud Colas <thib@thib.me> (https://github.com/ThibWeb)",
  "license": "ISC",
  "homepage": "https://github.com/ThibWeb/testdrived3#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThibWeb/testdrived3.git"
  },
  "bugs": {
    "url": "https://github.com/ThibWeb/testdrived3/issues"
  },
  "keywords": [
    "d3",
    "d3.js",
    "chart",
    "svg",
    "nodeschool",
    "nodeschool.io",
    "workshopper"
  ],
  "engines": {
    "node": ">=0.12"
  },
  "preferGlobal": true,
  "bin": "./es5/testdrived3.js",
  "dependencies": {
    "babel": "^5.8.23",
    "babelify": "^6.3.0",
    "browser-sync": "^2.9.6",
    "browserify": "^11.1.0",
    "cardinal": "^0.5.0",
    "chai": "^3.3.0",
    "d3": "^3.5.6",
    "html": "0.0.10",
    "jsdom": "^3.1.2",
    "mocha": "^2.3.3",
    "update-notifier": "^0.5.0",
    "workshopper": "^2.7.0",
    "workshopper-exercise": "^2.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "chai": "^3.3.0",
    "eslint": "^1.5.0",
    "eslint-config-airbnb": "0.0.8",
    "isparta": "^3.0.4",
    "mocha": "^2.3.3",
    "sinon": "^1.17.1"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "test:unit": "mocha --compilers js:babel/register src/tests",
    "test:unit:watch": "mocha --watch --compilers js:babel/register src/tests",
    "test:unit:coverage": "babel-node ./node_modules/.bin/isparta cover ./node_modules/.bin/_mocha -- src/tests",
    "test:unit:ci": "mocha --compilers js:babel/register es5/tests",
    "test:output": "./tests.sh",
    "pretest": "npm run lint -s",
    "test": "npm run test:unit -s",
    "test:ci": "npm run test -s && npm run test:unit:ci -s && npm run test:output -s",
    "start": "node src/index.js",
    "build": "rm -rf es5 && cp -R src es5 && babel src --out-dir es5 --ignore=tests,static,**/solution.js",
    "prepublish": "npm run build -s"
  }
}
